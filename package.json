{
  "name": "react-candidate",
  "version": "1.0.0",
  "description": "React typescript interview candidate management app",
  "repository": {
    "type": "git",
    "url": "https://github.com/morlombakop/react-candidate"
  },
  "author": "Morlo Mbakop",
  "license": "MIT",
  "main": "src/index.tsx",
  "scripts": {
    "develop": "concurrently -r \"npm:type-check:watch\" \"npm:start\"",
    "start": "parcel ./src/index.html",
    "build": "npm run type-check && parcel build ./src/index.html --public-url '/'",
    "prettify": "prettier --write './src/**/*.{ts,tsx}'",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettify && npm run test"
    }
  },
  "engines": {
    "node": ">= 8.11.0",
    "npm": ">= 6.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/config/test-preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/*.(test|spec).(ts|tsx|js)"
    ]
  },
  "keywords": [
    "Table Sorting",
    "Table Filtering",
    "React",
    "Typescript"
  ],
  "dependencies": {
    "lodash": "^4.17.11",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-icons": "^3.3.0",
    "react-intl": "^2.8.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/lodash": "^4.14.120",
    "@types/react": "^16.8.2",
    "@types/react-dom": "^16.8.0",
    "@types/react-icons": "^2.2.6",
    "@types/react-intl": "^2.3.16",
    "concurrently": "^4.1.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "parcel-bundler": "^1.11.0",
    "prettier": "^1.16.4",
    "react-icon": "^1.0.0",
    "react-test-renderer": "^16.8.1",
    "react-testing-library": "^5.5.4",
    "sass": "^1.17.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  }
}
